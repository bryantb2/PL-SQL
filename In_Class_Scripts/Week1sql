-- MONDAY
DECLARE
  FIRST_NAME CONSTANT VARCHAR2(10) := 'IRON';
  LAST_NAME CONSTANT VARCHAR2(10) := 'MAN';
BEGIN 
  DBMS_OUTPUT.PUT_LINE('Hello humans, my name is ' || FIRST_NAME || ' ' || LAST_NAME);
END;  

set feedback on;
set serveroutput on;
DECLARE 
  FIRST_NAME CONSTANT VARCHAR2(10) := 'IRON';
  LAST_NAME CONSTANT VARCHAR2(10) := 'MAN';
  RADIUS CONSTANT NUMBER(4,2) := 2.3;
  AREA_CIRCLE NUMBER(4,2);
BEGIN
  AREA_CIRCLE := 3.14 * RADIUS * RADIUS;
  DBMS_OUTPUT.PUT_LINE('Hello humans, my name is ' || FIRST_NAME || ' ' || LAST_NAME);
  DBMS_OUTPUT.PUT_LINE('Area of the circle is ' || AREA_CIRCLE);
END;

-- WEDNESDAY
DROP TABLE PEOPLE;
CREATE TABLE PEOPLE
(PERSON_ID NUMBER(5),
FULL_NAME VARCHAR2(50),
BIRTHDAY DATE);

INSERT INTO PEOPLE (PERSON_ID, FULL_NAME, BIRTHDAY)
VALUES (5, 'BLAKE/BRYANT', TO_DATE('05/05/2000', 'MM/DD/YYYY'));
SELECT * FROM PEOPLE;

set feedback on;
set serveroutput on;
DECLARE
  V_FIRST_NAME VARCHAR(50);
  V_LAST_NAME VARCHAR(50);
  V_BIRTH_DAY DATE;
BEGIN
  -- get date
  SELECT BIRTHDAY
    INTO V_BIRTH_DAY
    FROM PEOPLE
    WHERE PERSON_ID = 5;
  -- get first name
  SELECT 
    SUBSTR(PEOPLE.FULL_NAME, 1, INSTR(PEOPLE.FULL_NAME, '/') - 1), 
    SUBSTR(PEOPLE.FULL_NAME, INSTR(PEOPLE.FULL_NAME, '/') + 1)
      INTO V_FIRST_NAME, V_LAST_NAME
      FROM PEOPLE
    WHERE PEOPLE.PERSON_ID = 5;
  -- concat first and last name
  DBMS_OUTPUT.PUT_LINE('MY NAME IS: ' || V_FIRST_NAME || ' ' || V_LAST_NAME);
  -- first and last name lengths
  DBMS_OUTPUT.PUT_LINE('LENGTH OF FIRST NAME IS: ' || LENGTH(V_FIRST_NAME));
  DBMS_OUTPUT.PUT_LINE('LENGTH OF LAST NAME IS:  '  || LENGTH(V_LAST_NAME));
  DBMS_OUTPUT.PUT_LINE('LAST DAY OF BIRTHDAY MONTH: ' || LAST_DAY(V_BIRTH_DAY));
END;  